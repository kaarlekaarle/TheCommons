    "lookback_days": 30,
    "min_commits": 5
  },
  "windows": {
    "hierarchy_days": 3,
    "transparency_days": 7,
    "mixed_days": 5,
    "complexity_concentration_days": 14
  },
  "anti_flap": { "hysteresis_clean_runs": 2, "cooldown_hours": 24, "trend_count": 3 },
  "rules": [
    { "id": "A", "signals": ["#1","#4>=high"], "window_days": 3,  "decision": "block",
      "rationale": "Formal + informal hierarchy" },
    { "id": "B", "signals": ["#2>=critical","#3>=high"], "window_days": 7, "decision": "block",
      "rationale": "Opacity + complexity" },
    { "id": "C", "signals": ["#3>=high","#4>=high"], "window_days": 14, "decision": "block",
      "rationale": "Knowledge silos" },
    { "id": "D", "signals": ["#2>=high","#4>=high"], "window_days": 5, "decision": "block",
      "rationale": "Unresponsive + concentrated" }
  ]
}
